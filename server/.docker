# Use Node.js LTS
FROM node:18

# Create app directory inside container
WORKDIR /app

# Copy package.json and package-lock.json
COPY package*.json ./

# Install dependencies
RUN npm install

# Copy the rest of your project files
COPY . .

# Expose port (change if your app uses another)
EXPOSE 8001

# Start the server
CMD ["node", "index.js"]